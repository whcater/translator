<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tool.translator.TranslateController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox spacing="10">
        <TextField fx:id="txtDirectory" promptText="Enter directory path"/>
        <Button text="Choose" onAction="#onBtnChooseDirectoryClick"/>
    </HBox>
    <Label fx:id="lblResult"/>
    <Button text="Translate" onAction="#onBtnTranslateClick"/>
</VBox>
